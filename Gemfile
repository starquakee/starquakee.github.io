source 'https://rubygems.org'

group :jekyll_plugins do
  gem 'jekyll'
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jemoji'
  gem 'webrick', '~> 1.8'
end

gem 'github-pages'

# Add tzinfo-data for timezone issues (required for Windows)
gem 'tzinfo-data', platforms: %i[mingw mswin x64_mingw jruby]
